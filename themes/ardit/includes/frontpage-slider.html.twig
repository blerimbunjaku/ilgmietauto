<div class="banner">
    <div id="slider" class="carousel slide first-slide" data-ride="carousel" data-interval="false">

        <!-- Indicators -->
        <ul class="carousel-indicators">
            <li data-target="#slider" data-slide-to="0" class="active"></li>
            <li data-target="#slider" data-slide-to="1"></li>
            <li data-target="#slider" data-slide-to="2"></li>
        </ul>

        <div class="carousel-caption">
            <div class="row">
                <div class="col-md-12 col-lg-7 col-xl-5 offset-xl-1 slider-txt-left">
                    <h1>{{ page.slider.headertitle }}</h1>
                    <h6>{{ page.slider.header_subtitle }}</h6>
                </div>
                <div class="col-md-12 col-lg-5 col-xl-5 text-right slider-right">
                    {#<iframe class="h-frame" scrolling="no" src="https://kunden2.cx9.de/ilg/reservierung_rd/"#}
                            {#frameborder="0"></iframe>#}
                    <div class="frame-module">
                        <form action="#">
                            <h5>Abholstation</h5>
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="inputGroupPrepend"><i class="fas fa-map-marker-alt"></i></span>
                                    </div>
                                    <input type="text" name="place" value="ilgauto ag" class="form-control" aria-describedby="inputGroupPrepend" required readonly>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-6">
                                        <label for="abfahrtDatum">Abfahrt (Datum)</label>
                                        <input id="abfahrtDatum" name="abfahrt_datum" class="datepicker form-control">
                                    </div>
                                    <div class="col-6">
                                        <label for="abfahrtUhrzeit">Abfahrt (Uhrzeit)</label>
                                        <input id="abfahrtUhrzeit" name="abfahrt_uhrzeit" data-type="startTime" class="timepicker form-control">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-6">
                                        <label for="ruckgabeDatum">RÃ¼ckgabe (Datum)</label>
                                        <input id="ruckgabeDatum" name="ruckgabe_datum" class="datepicker form-control">
                                    </div>
                                    <div class="col-6">
                                        <label for="ruckgabeUhrzeit">RÃ¼ckgabe (Uhrzeit)</label>
                                        <input id="ruckgabeUhrzeit" name="ruckgabe_uhrzeit" date-type="endTime" class="timepicker form-control">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <a href="javascript:void(0)" class="text-center btn site-btn btn-block frame-btn">Preis ermitteln</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="carousel-inner d-none d-md-block ">
            <div class="carousel-item active">
                {{ page.slider.slider_one }}
            </div>
            <div class="carousel-item">
                {{ page.slider.slider_two }}
            </div>
            <div class="carousel-item">
                {{ page.slider.slider_three }}
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="carousel-control-prev" href="#slider" data-slide="prev">
                <span class="arrow">
                    <span class="fas fa-arrow-left"></span>
                </span>
        </a>
        <a class="carousel-control-next" href="#slider" data-slide="next">
                <span class="arrow">
                    <span class="fas fa-arrow-right"></span>
                </span>
        </a>

    </div>
</div>